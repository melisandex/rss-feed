{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "dev"
      ],
      "port": 3000,
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/.next/**/*.js"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}